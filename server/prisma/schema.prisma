generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid())
  email    String    @unique
  password String
  projects Project[]

  refreshToken String?
}

model Project {
  id     String  @id @default(cuid())
  title  String
  tods   Todo[]
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}

model Todo {
  id          String   @id @default(cuid())
  title       String
  description String
  isCompleted Boolean  @default(false)
  Project     Project? @relation(fields: [projectId], references: [id])
  projectId   String?
}
